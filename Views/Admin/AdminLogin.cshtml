@model LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập Admin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h1>Đăng nhập Admin</h1>
    <form asp-action="AdminLogin" asp-controller="Admin" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="RememberMe"></label>
            <input asp-for="RememberMe" />
            <span asp-validation-for="RememberMe" class="text-danger"></span>
        </div>
        <!-- Lấy returnUrl từ query string hoặc ViewData -->
        <input type="hidden" name="returnUrl" value="@(ViewData["ReturnUrl"] ?? "Views/Admin/Dashboard")" />
        
        <button type="submit" class="Login_btm" >Đăng nhập</button>
    </form>
</div>

@section Scripts {
    <script>
        // Tự động focus vào email khi load trang
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('Email').focus();
        });

        // Hiển thị mật khẩu khi click icon
        document.querySelectorAll('.input-group').forEach(function(group) {
            var passwordInput = group.querySelector('input[type="password"]');
            if (passwordInput) {
                var toggleBtn = document.createElement('span');
                toggleBtn.className = 'input-group-text cursor-pointer';
                toggleBtn.innerHTML = '<i class="fas fa-eye"></i>';
                group.appendChild(toggleBtn);

                toggleBtn.addEventListener('click', function() {
                    if (passwordInput.type === 'password') {
                        passwordInput.type = 'text';
                        this.innerHTML = '<i class="fas fa-eye-slash"></i>';
                    } else {
                        passwordInput.type = 'password';
                        this.innerHTML = '<i class="fas fa-eye"></i>';
                    }
                });
            }
        });
    </script>
}